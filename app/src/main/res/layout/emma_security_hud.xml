<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/emma_hud_bg">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emma_security_title"
        android:textColor="@color/emma_tactical_green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        android:layout_marginBottom="12dp" />

    <!-- Threat Level Indicator -->
    <im.molly.app.ui.security.ThreatLevelIndicator
        android:id="@+id/emma_threat_indicator"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Status Line -->
    <TextView
        android:id="@+id/emma_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emma_threat_level"
        android:textColor="@color/emma_threat_low"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Divider -->
    <View
        style="@style/EMMA.Divider"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Metrics Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Chaos Intensity -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAOS"
                android:textColor="@color/emma_text_secondary"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/emma_chaos_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="@color/emma_tactical_amber"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Countermeasures Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textColor="@color/emma_text_secondary"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_gravity="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textColor="@color/emma_tactical_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        style="@style/EMMA.Divider"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Active Countermeasures -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVE COUNTERMEASURES"
        android:textColor="@color/emma_text_secondary"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/emma_countermeasures_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEM-PROTECT • CACHE-POISON • NET-OBFUSC"
        android:textColor="@color/emma_text_primary"
        android:textSize="11sp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/emma_timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00.000"
        android:textColor="@color/emma_text_tertiary"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:layout_gravity="end" />

</LinearLayout>
